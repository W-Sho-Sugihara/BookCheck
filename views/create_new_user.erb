        <input class="new_user-input" type="text" name="email" value="">
      </div>
      <div class="new_user-form-sub-container">
        <label class="new_user-label">Phone Number:</label>
        <input class="new_user-input" type="text" name="phone_number" value="">
      </div>
      <div class="new_user-form-sub-container">
        <label class="new_user-label">Catagory:</label>
        <input class="new_user-input" type="text" name="catagory" value="">
      </div>
      <div class="new_user-form-btn-container">
        <input class="btn-create-new" type="submit" value="Create">
      </div>
    </form>
  </div>
  
</div>